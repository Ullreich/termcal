Stopwatch {   
    background: $boost;
    height: 5;
    margin: 1;
    min-width: 50;
    padding: 1;
}

TimeDisplay {   
    text-align: center;
    color: $foreground-muted;
    height: 3;
}

Button {
    width: 16;
}

#start {
    dock: left;
}

#stop {
    dock: left;
    display: none;
}

#reset {
    dock: right;
}

Screen {
    align: center middle;
    height: 100vh;
}

ListView {
    width: 100%;
    height: 100%;
    margin: 0 0;
}

Label {
    padding: 1 2;
}

#primary-label {
    background: $primary;
    color: $text;
    text-align: center;
    margin: 1;
    border: solid $accent;
}

#secondary-label {
    background: $secondary;
    color: $warning;
    text-align: left;
    margin: 3;
    height: 7;
    border: dashed $success;
}